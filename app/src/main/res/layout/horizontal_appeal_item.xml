<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/horizontalAppeal_LAY_cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginHorizontal="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:padding="16dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/horizontalAppeal_LBL_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="Appeal ###"
                    android:textSize="28sp"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/light_blue"/>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/horizontalAppeal_LAY_detailsHor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@+id/horizontalAppeal_LBL_text">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/horizontalAppeal_LBL_dateOfIssueHor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Date of Issue"
                        android:inputType="none"
                        android:focusable="false"
                        android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/horizontalAppeal_LBL_ticketIdHor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="Ticket ID"
                        android:inputType="none"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/horizontalAppeal_LAY_status"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp"
                    android:layout_below="@+id/horizontalAppeal_LAY_detailsHor">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/horizontalAppeal_LBL_statusHor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="status:"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"/>

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/horizontalAppeal_LBL_statusText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text=" Active"
                        android:textSize="28sp"
                        android:textStyle="bold"
                        android:textColor="@color/orange_400"/>
                </androidx.appcompat.widget.LinearLayoutCompat>

                <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/horizontalAppeal_LAY_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp"
                    android:layout_below="@+id/horizontalAppeal_LAY_status">

                    <ImageButton
                        android:id="@+id/horizontalAppeal_BTN_approve"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_approve"
                        android:contentDescription="approve"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter" />

                    <ImageButton
                        android:id="@+id/horizontalAppeal_BTN_decline"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_decline"
                        android:contentDescription="approve"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter" />

                    <ImageButton
                        android:id="@+id/horizontalAppeal_BTN_download"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_weight="1"
                        android:src="@drawable/ic_download"
                        android:contentDescription="approve"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:scaleType="fitCenter" />

                </androidx.appcompat.widget.LinearLayoutCompat>
            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.appcompat.widget.LinearLayoutCompat>
